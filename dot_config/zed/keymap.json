// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    // jk
    "context": "vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore" // In insert mode, make jk escape to normal mode.
    }
  },
  {
    // Lets you move out of special panes (like file explorer or AI assistant)
    "context": "Dock",
    "bindings": {
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown"
      // ... or other keybindings
    }
  },
  {
    // sneak motion
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward"
    }
  },
  {
    // switching tabs
    "context": "(Pane || Editor)",
    "bindings": {
      "shift-l": "pane::ActivateNextItem",
      "shift-h": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "(Pane || Editor) && vim_mode == insert",
    "bindings": {
      "shift-l": null,
      "shift-h": null
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "shift-space x": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "shift-space x": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "shift-space c": "editor::ShowCompletions",
      "shift-space x": "workspace::CloseAllDocks",
      "shift-space e": "file_finder::Toggle",
      "shift-space p": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "shift-space z": "workspace::ToggleZoom"
    }
  }
]
